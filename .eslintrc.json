{
  "extends": ["trybe-frontend"],
  "overrides": [
    {
      "files": ["src/tests/**/*.js"],
      "plugins": ["react", "react-hooks"],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 90,
            "ignoreComments": true,
            "ignoreUrls": true,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true
          }
        ],
        "max-lines": [ "off" ],
        "no-magic-numbers": [ "off" ],
        "no-warning-comments": "off",
        "react-hooks/exhaustive-deps": "off"
      }
    }
  ]
}
